{
  "name": "@animaapp/anima-sdk-monorepo",
  "private": true,
  "workspaces": [
    "./example-server",
    "./sdk",
    "./sdk-react"
  ],
  "version": "0.0.4",
  "type": "module",
  "description": "Anima's JavaScript utilities library",
  "author": "Anima App, Inc.",
  "license": "ISC",
  "packageManager": "yarn@4.6.0",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AnimaApp/anima-sdk.git"
  },
  "scripts": {
    "build": "turbo run build",
    "publish": "turbo run build && changeset publish --access public",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings=0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix"
  },
  "dependencies": {
    "@changesets/cli": "^2.27.12",
    "prettier": "^3.5.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.2.1",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "turbo": "^2.4.4",
    "typescript": "^5.7.3"
  },
  "prettier": {
    "singleQuote": false,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ]
  }
}
